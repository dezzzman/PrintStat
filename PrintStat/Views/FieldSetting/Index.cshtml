@model IList<PrintStat.Settings>
@{
    ViewBag.Title = "Поля настроек";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Поля настроек</h2>

<p>
    <div class="menu">
        <a href="@Url.Action("CreateFieldSetting", "FieldSetting")">Добавить поле настройки</a>
    </div>

</p>

<p>
    <table>
        <thead>
            <tr>
                <th>Наименование поля </th>

                <th>Редакция</th>
                <th>Удаление</th>
            </tr>
        </thead>
        @foreach (var feildSetting in Model)
        {
            <tr>
                <td width="200">
                    @feildSetting.Name
                </td>


                <td width="80">
                    <a href="@Url.Action("EditFieldSetting", "FieldSetting", new { id = @feildSetting.ID })">●</a>
                </td>
                <td width="80">
                    <a href="@Url.Action("DeleteFieldSetting", "FieldSetting", new { id = @feildSetting.ID })"><font color="red">●</font></a>
                </td>
            </tr>
        }
    </table>
</p>


