@model PrintStat.Models.ViewModels.DepartmentView

@using (Html.BeginForm("EditDepartment", "Department", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="Name">
                Наименование отдела
            </label>
            

            <div class="controls">
                @Html.TextBox("Name", Model.Name)
                @Html.ValidationMessage("Name")
            </div>
            <label class="control-label" for="ShortName">
                Краткое название
            </label>
            <div class="controls">
                @Html.TextBox("ShortName", Model.ShortName)
                @Html.ValidationMessage("ShortName")
            </div>
        </div>
      
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Изменить
            </button>
            @Html.ActionLink("Отмена", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}