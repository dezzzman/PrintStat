@model IList<PrintStat.TypeConsumable>
@{
    ViewBag.Title = "Типы заменяемыех комплектующих";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Заменяемые комплектующие</h2>



<p>
    <div class="menu">
        <a href="@Url.Action("CreateTypeConsumable", "TypeConsumable")">Добавить тип комплектующего</a>
    </div>

</p>

<p>
    <table>
        <thead>
            <tr>
                <th>Наименование</th>
               <th>Редакция</th>
                <th>Удаление</th>
            </tr>
        </thead>
        @foreach (var component in Model)
        {
            <tr>
                <td width="200">
                    @component.Name
                </td>

                <td width="80">
                    <a href="@Url.Action("EditTypeConsumable", "TypeConsumable", new { id = @component.ID })">●</a>
                </td>
                <td width="80">
                    <a href="@Url.Action("DeleteTypeConsumable", "TypeConsumable", new { id = @component.ID })"><font color="red">●</font></a>
                </td>
            </tr>
        }
    </table>
</p>


