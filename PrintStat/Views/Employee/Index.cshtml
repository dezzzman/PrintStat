@model IList<PrintStat.Employee>
@{
    ViewBag.Title = "Сотрудники";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Сотрудники</h2>

<p>
    <div class="menu">
        <a href="@Url.Action("CreateEmployee", "Employee")">Добавить сотрудника</a>
    </div>

</p>

<p>
    <table>
        <thead>
            <tr>
                <th>ФИО сотрудника</th>

                <th>Редакция</th>
                <th>Удаление</th>
            </tr>
        </thead>
        @foreach (var val in Model)
        {
            <tr>
                <td width="200">
                    @val.Name
                </td>

                
                <td width="80">
                    <a href="@Url.Action("EditEmployee", "Employee", new { id = val.ID })">●</a>
                </td>
                <td width="80">
                    <a href="@Url.Action("DeleteEmployee", "Employee", new { id = val.ID })"><font color="red">●</font></a>
                </td>
            </tr>
        }
    </table>
</p>



