@model IList<PrintStat.Manufacturer>
@{
    ViewBag.Title = "Производители";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Производители </h2>

<p>
    <div class="menu">
        <a href="@Url.Action("CreateManufacturer", "Manufacturer")">Добавить производителя</a>
    </div>

</p>

<p>
    <table>
        <thead>
            <tr>
                <th>Наименование</th>

                <th>Редакция</th>
                <th>Удаление</th>
            </tr>
        </thead>
        @foreach (var manufac in Model)
        {
            <tr>
                <td width="200">
                    @manufac.Name
                </td>

                
                <td width="80">
                    <a href="@Url.Action("EditManufacturer", "Manufacturer", new { id = @manufac.ID })">●</a>
                </td>
                <td width="80">
                    <a href="@Url.Action("DeleteManufacturer", "Manufacturer", new { id = @manufac.ID })"><font color="red">●</font></a>
                </td>
            </tr>
        }
    </table>
</p>



