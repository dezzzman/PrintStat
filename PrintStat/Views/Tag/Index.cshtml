@model IList<PrintStat.Tag>
@{
    ViewBag.Title = "Теги";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Теги</h2>

<p>
    <div class="menu">
        <a href="@Url.Action("CreateTag", "Tag")">Добавить тег</a>
        <a href="@Url.Action("Index","TagType")">Добавить типа тега</a>
    </div>

</p>

<p>
    <table>
        <thead>
        <tr>
            <th>Тег</th>
            <th>Наименование</th>
            <th>Тип тега</th>

            <th>Редакция</th>
            <th>Удаление</th>
        </tr>
        </thead>
        @foreach (var tag in Model)
        {
            <tr>
                <td width="200">
                    @tag.Tag1
                </td>
                <td width="200">
                    @tag.Name
                </td>
                <td width="200">
                    @tag.TagType.Type
                </td>


                <td width="80">
                    <a href="@Url.Action("EditTag", "Tag", new {id = @tag.ID})">●</a>
                </td>
                <td width="80">
                    <a href="@Url.Action("DeleteTag", "Tag", new {id = @tag.ID})"><font color="red">●</font></a>
                </td>
            </tr>
        }
    </table>
    
</p>


