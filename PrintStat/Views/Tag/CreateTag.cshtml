@model PrintStat.Models.ViewModels.TagView

@using (Html.BeginForm("CreateTag", "Tag", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="Name">
                Наименование тега
            </label>

            <div class="controls">
                @Html.TextBox("Name", Model.Name)
                @Html.ValidationMessage("Name")
            </div>
            <label class="control-label" for="Tag1">
                Тег
            </label>
            <div class="controls">
                @Html.TextBox("Tag1", Model.Tag1)
                @Html.ValidationMessage("Tag1")
            </div>
            <label class="control-label" for="TagTypeID">
                Тип тега
            </label>
            <div class="styled-select">
                @Html.DropDownList("TagTypeID", new SelectList(ViewBag.TagTypes, "ID", "Type"))
            </div>
        </div>
      
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Создать
            </button>
            @Html.ActionLink("Отмена", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}