@model IList<PrintStat.Application>
@{
    ViewBag.Title = "Приложения";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Приложения</h2>



<p>
    <div class="menu">
        <a href="@Url.Action("CreateApplication", "Application")">Добавить приложение</a>
    </div>

</p>

<p>
    <table>
        <thead>
            <tr>
                <th>Наименование</th>

                <th>Редакция</th>
                <th>Удаление</th>
            </tr>
        </thead>
        @foreach (var devicetype in Model)
        {
            <tr>
                <td width="200">
                    @devicetype.Name
                </td>

                <td width="80">
                    <a href="@Url.Action("EditApplication", "Application", new { id = @devicetype.ID })">●</a>
                </td>
                <td width="80">
                    <a href="@Url.Action("DeleteApplication", "Application", new { id = @devicetype.ID })"><font color="red">●</font></a>
                </td>
            </tr>
        }
    </table>
</p>


