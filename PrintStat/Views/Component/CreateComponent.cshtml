@model PrintStat.Models.ViewModels.ComponentView

@using (Html.BeginForm("CreateComponent", "Component", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="Name">
                Наименование комплектующего
            </label>

            <div class="controls">
                @Html.TextBox("Name", Model.Name)
                @Html.ValidationMessage("Name")
            </div>

            <label class="control-label" for="Endurance">
                Рабочий ресурс
            </label>
            <div class="controls">
                @Html.TextBox("Endurance", Model.Endurance)
                @*@Html.ValidationMessage("Endurance")*@
                @* не обязательно поле*@
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                Создать
            </button>
            @Html.ActionLink("Отмена", "Index", null, null, new { @class = "btn" })
        </div>
    </fieldset>
}